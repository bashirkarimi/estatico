{{#extend "preview/layouts/layout"}}
	{{#content "content"}}
		<div class="sg__tree">
			{{#if pages}}
				<div class="sg__collapsible">
					<h2 class="sg__collapsible_title">Pages</h2>

					<ul class="sg__collapsible_content">
						{{#each pages}}
							{{#unless meta.hideFromListing}}
								<li>
									<a href="{{meta.previewUrl}}" target="module_wrapper">{{meta.title}}</a>
									{{#if meta.jira}}
										(<a href="#{{meta.jira}}">
											{{meta.jira}}
										</a>)
									{{/if}}
									{{#if meta.feature}} &mdash; {{meta.feature}}{{/if}}
								</li>
							{{/unless}}
						{{/each}}
					</ul>
				</div>
			{{/if}}

			{{#if modules}}
				<div class="sg__collapsible">
					<h2 class="sg__collapsible_title">Modules</h2>

					<ul class="sg__collapsible_content">
						{{#each modules}}
							{{#unless meta.hideFromListing}}
								<li>
									<a href="{{meta.previewUrl}}" target="module_wrapper">
										{{meta.title}}
									</a>
									{{#if meta.jira}}
										(<a href="#{{meta.jira}}">
											{{meta.jira}}
										</a>)
									{{/if}}
									{{#if meta.feature}} &mdash; {{meta.feature}}{{/if}}
								</li>
							{{/unless}}
						{{/each}}
					</ul>
				</div>
			{{/if}}

			{{#if styleguide}}
				<div class="sg__collapsible">
					<h2 class="sg__collapsible_title">Styleguide</h2>

					<ul class="sg__collapsible_content">
						{{#each styleguide}}
							{{#unless meta.hideFromListing}}
								<li>
									<a href="{{meta.previewUrl}}" target="module_wrapper">
										{{meta.title}}
									</a>
								</li>
							{{/unless}}
						{{/each}}
					</ul>
				</div>
			{{/if}}
		</div>

		<div class="sg__preview">
			<div class="sg__home">
				<h1 class="sg__title">
					<a href="/">{{project}}</a>{{#if meta.title}} / {{meta.title}}{{/if}}
				</h1>

				{{{meta.documentation}}}
			</div>

			<iframe frameborder="0" id="module_wrapper" class="sg__module_wrapper sg__module_wrapper--is_hidden" name="module_wrapper"></iframe>

			{{> preview/partials/footer}}
		</div>
	{{/content}}
{{/extend}}
