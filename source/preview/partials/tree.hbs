<div class="sg__tree">
	<h1 class="sg_title">
		<a href="/" class="sg_logo">Est√°tico</a>
	</h1>

	{{#if tree.pages}}
		<div class="sg__collapsible">
			<h2 class="sg__collapsible_title">Pages</h2>

			<ul class="sg__collapsible_content">
				{{#each tree.pages}}
					{{#unless meta.hideFromListing}}
						<li>
							<a href="{{meta.previewUrl}}">{{meta.title}}</a>
							{{#if meta.jira}}
								(<a href="#{{meta.jira}}">
								{{meta.jira}}
							</a>)
							{{/if}}
							{{#if meta.feature}} &mdash; {{meta.feature}}{{/if}}
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	{{/if}}

	{{#if tree.modules}}
		<div class="sg__collapsible">
			<h2 class="sg__collapsible_title">Modules</h2>

			<ul class="sg__collapsible_content">
				{{#each tree.modules}}
					{{#unless meta.hideFromListing}}
						<li>
							<a href="{{meta.previewUrl}}">
								{{meta.title}}
							</a>
							{{#if meta.jira}}
								(<a href="#{{meta.jira}}">
								{{meta.jira}}
							</a>)
							{{/if}}
							{{#if meta.feature}} &mdash; {{meta.feature}}{{/if}}
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	{{/if}}

	{{#if tree.styleguide}}
		<div class="sg__collapsible">
			<h2 class="sg__collapsible_title">Styleguide</h2>

			<ul class="sg__collapsible_content">
				{{#each tree.styleguide}}
					{{#unless meta.hideFromListing}}
						<li>
							<a href="{{meta.previewUrl}}">
								{{meta.title}}
							</a>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	{{/if}}
</div>
